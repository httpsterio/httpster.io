{% if post.data.theme %}<style>
.theme-{{post.data.theme}} {
  border-color: var(--color-{{post.data.theme}});
  color: var(--color-dark);
  background-color: var(--color-{{post.data.theme}});
}

.theme-{{post.data.theme}}:hover,
.theme-{{post.data.theme}}:focus-within {
  border-color: var(--color-dark);
  box-shadow: 0.75rem -0.75rem 0 0 var(--color-dark), -0.75rem 0.75rem 0 0 var(--color-{{post.data.theme}});
}
</style>{% endif %}

<article class="post-item {{post.data.type}} theme-{{post.data.theme}} flow overflow-hidden h-entry">
  <h3><a href="{{ post.url | url }}">{{ post.data.title }}</a></h3>
  <div class="post-meta mt-xs">
    {% set definedDate = post.date %} {% include "partials/date.njk" %}
    <span class="post-category">${{post.data.category}}</span>
    <ul class="tag-list">
      {% for tag in post.data.tags %}
        {% if tag != "posts" %}
          <li class="post-tag">#{{ tag }}</li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>

  <p class="mt-xs">{{ post.data.description }}</p>
</article>
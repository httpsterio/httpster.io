{% if post.data.theme %}<style>
.theme-{{post.data.theme[0]}} {
  border-color: var(--color-{{post.data.theme[0]}});
  color: var(--color-{{post.data.theme[1]}});
  background-color: var(--color-{{post.data.theme[0]}});
}

.theme-{{post.data.theme[0]}}:hover,
.theme-{{post.data.theme[0]}}:focus-within {
  border-color: var(--color-{{post.data.theme[1]}});
  box-shadow: 0.75rem -0.75rem 0 0 var(--color-{{post.data.theme[1]}}), -0.75rem 0.75rem 0 0 var(--color-{{post.data.theme[0]}});
}

.theme-{{post.data.theme[0]}}-post-tag {
  color: var(--color-{{post.data.theme[0]}});
  background: var(--color-{{post.data.theme[1]}});
}

</style>{% endif %}

<article class="post-item {{post.data.type}} theme-{{post.data.theme[0]}} flow overflow-hidden h-entry">
  <h3><a href="{{ post.url | url }}">{{ post.data.title }}</a></h3>
  <div class="post-meta mt-xs">
    {% set definedDate = post.date %} {% include "partials/date.njk" %}
    <span class="post-category">${{post.data.category}}</span>
    <ul class="tag-list">
      {% for tag in post.data.tags | sort %}
        {% if tag != "posts" %}
          <li class="post-tag theme-{{post.data.theme[0]}}-post-tag">#{{ tag }}</li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>

  <p class="mt-xs">{{ post.data.description }}</p>
</article>
{% if theme %}
<style>
.logo {
  text-shadow: var(--color-dark) 2px 1px, var(--color-{{theme[0]}}) 0.15ch 0.15ch;
}

.logo:hover, .logo:focus-within {
    color: var(--color-{{theme[0]}});
    text-shadow: var(--color-dark) 2px -1px, var(--color-light) 0.15ch -0.15ch;
    transition: 0.3s ease-out;
}

.title-shadow, .title-shadow-post{
    text-shadow: var(--color-dark) 1px 1px, var(--color-{{theme[0]}}) 0.1ch 0.1ch;
}
</style>
{% endif %}
---
layout: base
---

<header class="section spot-color-dark">
  <div class="section__inner region">
    <div class="wrapper flow">
      <section class="wrapper flow prose text-center">
        <h1 class="title-shadow">{{ title }}</h1>
            {% if subtitle %}
              <p class="mt-l-xl subtitle">{{ subtitle | safe }}</p>
            {% endif %}
      </section>
    </div>
  </div>
</header>

<article class="region" style="--region-space-top: var(--space-s)">
  <div class="wrapper post-list mt-l-xl">
    {% set postslist = collections.posts %} 
    {% for post in postslist %}

    <article class="post-item flow overflow-hidden">
      <h3><a href="{{ post.url | url }}">{{ post.data.title }}</a></h3>
      <div class="post-meta mt-xs">
        {% set definedDate = post.date %} {% include "partials/date.njk" %}
        <span class="post-category">${{post.data.category}}</span>
        <ul class="tag-list">
          {% for tag in post.data.tags %}
            {% if tag != "posts" %}
              <li class="tag">#{{ tag }}</li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

      <p class="mt-xs">{{ post.data.description }}</p>
    </article>
    {% endfor %}
    
  </div>
</article>
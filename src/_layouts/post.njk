---
layout: base
schema: blog
---

<article class="region blog">
  <div class="wrapper prose">
    <h1 class="title-shadow-post">{{ title }}</h1>

    <div class="post-meta mt-m">
      {% set definedDate = post.date %}{% include "partials/date.njk" %}
      <ul class="tag-list mb-m">
        {% for tag in tags %}
          {% if tag != "posts" %}
            <li class="tag">[{{ tag }}]</li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  <div class="wrapper flow">
    {{ content | safe }}
  </div>
  </div>
</article>

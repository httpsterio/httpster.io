---
layout: base
schema: blog
---

<article class="region blog">
  <div class="wrapper prose">
    <h1 class="title-shadow-post">{{ title }}</h1>
    <div class="post-meta my-s-m">
      {% set definedDate = date %}{% include "partials/date.njk" %}
      <span class="post-category">${{category}}</span>
      <ul class="tag-list">
        {% for tag in tags %}
          {% if tag != "posts" %}
            <li class="post-tag theme-{{theme[0]}}-post-tag">#{{ tag }}</li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
    {% if reviewtype == "album" %}
      {% include "partials/review/album-meta.njk" %}
    {% endif %}
    {% if reviewtype == "film" %}
      {% include "partials/review/film-meta.njk" %}
    {% endif %}

    <div class="wrapper flow">
      {{ content | safe }}
    </div>
  </div>
</article>
{% include "partials/post-meta.njk" %}
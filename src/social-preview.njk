  <!-- date -->
  <text
    font-family="PP Supply Sans"
    font-size="24"
    font-weight="bold"
    fill="#F3F3F3"
    letter-spacing="-1"
  >
    <tspan x="160" y="{{ verticalStartingPoint - 120 }}">
      {{ preview.date | formatDate('DD / MM / YYYY') }}
    </tspan>
  </text>

  <!-- title -->
  <text
    id="text"
    font-family="PP Supply Sans"
    font-size="80"
    font-weight="900"
    fill="#F3F3F3"
    letter-spacing="-3"
  >
    {% for line in titleInLines %}
    <tspan x="160" y="{{ verticalStartingPoint - 20 + loop.index0 * 80 }}">
      {{ line }}
    </tspan>
    {% endfor %}
  </text>

  <!-- sitename -->
  <text
  font-family="Redhat, Roboto, 'Helvetica Neue', sans-serif"
    font-size="24"
    font-weight="bold"
    fill="#F3F3F3"
    letter-spacing="-0.5"
  >
    <tspan x="160" y="600">{{ meta.siteName }}</tspan>
  </text>
</svg>
